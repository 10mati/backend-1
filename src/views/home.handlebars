<div class="home"></div>
<section class="home__products-section d-flex flex-wrap justify-content-around align-content-around">
  {{#each products}}
  <article class="home__product-article my-2">
    <div class="card border-primary" style="width: 18rem;">
      <img src={{this.photo}} class="card-img-top" alt="imagen del producto" />
      <div class="card-body">
        <h5 class="card-title text-center">{{this.title}}</h5>
        <h6 class="card-subtitle mb-2 text-muted text-center">{{this.category}}</h6>
        <p class="card-text text-center">Stock: {{this.stock}}</p>
        <ul class="list-group list-group-flush">
          <li class="list-group-item text-center">Precio: <strong>{{this.price}}</strong></li>
        </ul>
        <div class="text-center">
          <a href="#" class="btn btn-success">Comprar</a>
        </div>
      </div>
    </div>
  </article>
  {{/each}}
</section>

<div class="d-flex justify-content-center mt-3"> <!-- Contenedor para los botones -->
  {{#if hasPrevPage}}
    <a href="?page={{prevPage}}&limit=6" class="btn btn-primary btn-sm mx-1">Anterior</a> <!-- Botón más pequeño -->
  {{/if}}

  <p class="text-center">Página {{page}}/{{totalPages}}</p>
  
  {{#if hasNextPage}}
    <a href="?page={{nextPage}}&limit=6" class="btn btn-primary btn-sm mx-1">Siguiente</a> <!-- Botón más pequeño -->
  {{/if}}
</div>